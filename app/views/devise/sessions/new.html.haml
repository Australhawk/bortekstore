
%table.boxestb{:border => "0"}
  %tr
    %td.boxestd
      
    %td.boxestd
      .flogin
        
        
        = semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          = f.inputs do
            = f.input :email
            = f.input :password
            - if devise_mapping.rememberable?
              = f.input :remember_me, :as => :boolean, :label => "Recordarme"
            = f.action :submit, :label => "Iniciar Sesion", :button_html => { :disable_with => 'Iniciando...' }
        = render "devise/shared/links"
    
    %td.boxestd
      